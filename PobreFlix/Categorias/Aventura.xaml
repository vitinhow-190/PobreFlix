<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PobreFlix.Categorias.Aventura"
             Title="Aventura"
             BackgroundColor="Black">
    
        <ScrollView>
           
            <Grid RowDefinitions="650, 600"
                  ColumnDefinitions="*, *" ColumnSpacing="10"  RowSpacing="10"
                  Margin="10"
                  VerticalOptions="FillAndExpand"
                  Padding="5">
                <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="0" Grid.Row="0" Source="junglecruise.jpeg" x:Name="junglecruise" Clicked="junglecruise_Clicked"/>
                <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="0" Grid.Row="1" Source="indianajones.jpg" x:Name="btnindianajones" Clicked="btnindianajones_Clicked"/>
                <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="1" Grid.Row="0" Source="tombraider.jpg" x:Name="btntombraider" Clicked="btntombraider_Clicked"/>
                <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="1" Grid.Row="1" Source="jurassicworld.jpg" x:Name="btnjurassicworld" Clicked="btnjurassicworld_Clicked"/>
            </Grid>
                           
        </ScrollView>
    
</ContentPage>