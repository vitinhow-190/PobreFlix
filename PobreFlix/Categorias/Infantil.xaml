<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PobreFlix.Categorias.Infantil"
             Title="Infantil"
             BackgroundColor="Black">
    <ScrollView>

        <Grid RowDefinitions="650, 600"
         ColumnDefinitions="*, *" ColumnSpacing="10"  RowSpacing="10"
         Margin="10"
         VerticalOptions="FillAndExpand"
         Padding="5">
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="0" Grid.Row="0" Source="elementos.webp" x:Name="elementos" Clicked="elementos_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="0" Grid.Row="1" Source="hoteltransilvania.webp" x:Name="hotaltrans" Clicked="hotaltrans_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="1" Grid.Row="0" Source="trolls3.jpg" x:Name="trolls" Clicked="trolls_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="1" Grid.Row="1" Source="doisirmaos.webp" x:Name="doisirmaos" Clicked="doisirmaos_Clicked"/>
        </Grid>

    </ScrollView>
</ContentPage>