<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PobreFlix.Categorias.Terror"
             Title="Terror">
    <ScrollView>

        <Grid RowDefinitions="650, 600"
      ColumnDefinitions="*, *" ColumnSpacing="10"  RowSpacing="10"
      Margin="10"
      VerticalOptions="FillAndExpand"
      Padding="5">
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="0" Grid.Row="0" Source="amdd.jpg" x:Name="amdd" Clicked="amdd_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="0" Grid.Row="1" Source="theblackphone.jpg" x:Name="phone" Clicked="phone_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="1" Grid.Row="0" Source="sorria.jpg" x:Name="sorria" Clicked="sorria_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="1" Grid.Row="1" Source="umlugar.jpg" x:Name="umlugar" Clicked="umlugar_Clicked"/>
        </Grid>

    </ScrollView>
</ContentPage>