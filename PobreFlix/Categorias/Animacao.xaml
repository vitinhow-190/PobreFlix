<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PobreFlix.Categorias.Animacao"
             Title="Animacao"
             BackgroundColor="Black">
    <ScrollView>

        <Grid RowDefinitions="650, 600"
            ColumnDefinitions="*, *" ColumnSpacing="10"  RowSpacing="10"
            Margin="10"
            VerticalOptions="FillAndExpand"
            Padding="5">
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="0" Grid.Row="0" Source="shrek2.jpg" x:Name="shrek2" Clicked="shrek2_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="0" Grid.Row="1" Source="gdb2.webp" x:Name="gdb2" Clicked="gdb2_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="1" Grid.Row="0" Source="fnc.jpg" x:Name="fnc" Clicked="fnc_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="1" Grid.Row="1" Source="mmf3.webp" x:Name="mmf3" Clicked="mmf3_Clicked"/>
        </Grid>

    </ScrollView>
</ContentPage>