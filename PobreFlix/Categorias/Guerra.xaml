<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PobreFlix.Categorias.Guerra"
             Title="Guerra"
             BackgroundColor="Black">
    <ScrollView>

        <Grid RowDefinitions="650, 600"
       ColumnDefinitions="*, *" ColumnSpacing="10"  RowSpacing="10"
       Margin="10"
       VerticalOptions="FillAndExpand"
       Padding="5">
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="0" Grid.Row="0" Source="troia.jpg" x:Name="troia" Clicked="troia_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="0" Grid.Row="1" Source="sa.jpg" x:Name="SniperAmericano" Clicked="SniperAmericano_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="1" Grid.Row="0" Source="milnovessentos.jpg" x:Name="milnovessentos" Clicked="milnovessentos_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="1" Grid.Row="1" Source="dunkirk.png
                         " x:Name="Dunkirk" Clicked="Dunkirk_Clicked"/>
        </Grid>

    </ScrollView>
</ContentPage>