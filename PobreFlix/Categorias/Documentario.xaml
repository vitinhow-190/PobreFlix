<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PobreFlix.Categorias.Documentario"
             Title="Documentario"
             BackgroundColor="Black">
    <ScrollView>

        <Grid RowDefinitions="650, 600"
      ColumnDefinitions="*, *" ColumnSpacing="10"  RowSpacing="10"
      Margin="10"
      VerticalOptions="FillAndExpand"
      Padding="5">
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="0" Grid.Row="0" Source="omdmm.webp" x:Name="omdmm" Clicked="omdmm_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="0" Grid.Row="1" Source="pp.webp" x:Name="pp" Clicked="pp_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="1" Grid.Row="0" Source="kiss.webp" x:Name="kiss" Clicked="kiss_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="1" Grid.Row="1" Source="nossoplaneta.jpg" x:Name="nossoplaneta" Clicked="nossoplaneta_Clicked"/>
        </Grid>

    </ScrollView>
</ContentPage>