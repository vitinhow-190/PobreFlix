<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PobreFlix.Categorias.Drama"
             Title="Drama"
             BackgroundColor="Black">
    <ScrollView>

        <Grid RowDefinitions="650, 600"
          ColumnDefinitions="*, *" ColumnSpacing="10"  RowSpacing="10"
          Margin="10"
          VerticalOptions="FillAndExpand"
          Padding="5">
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="0" Grid.Row="0" Source="vidasdeumcachorro.jpg" x:Name="dog" Clicked="dog_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="0" Grid.Row="1" Source="estrelasalemdotempo.jpg" x:Name="estrelas" Clicked="estrelas_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="1" Grid.Row="0" Source="aculpaedasestrelas.jpg" x:Name="aculpa" Clicked="aculpa_Clicked"/>
            <ImageButton BackgroundColor="Black" Aspect="AspectFit" Grid.Column="1" Grid.Row="1" Source="extraordinario.jpg" x:Name="extra" Clicked="extra_Clicked"/>
        </Grid>

    </ScrollView>
</ContentPage>